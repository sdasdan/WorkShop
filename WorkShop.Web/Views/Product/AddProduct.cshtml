@model WorkShop.Models.Product

@{
    ViewData["Title"] = "AddProduct";
}

<script>
         function newProduct() {

        $('#ProductDetail').load('@Url.Action("NewProduct", "Product")', function () {
            $('#ProductModal').modal('show');
        });
    }
</script>

<h1>AddProduct</h1>

<h4>Product</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddProduct">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Categories" class="control-label"></label>
                @Html.ListBoxFor("Categotie", Model.Categories.Select(x => x.Name).ToList());
            </div>

            <div id="NewProduct"></div>
            <div class="form-group ">
                <a class="btn btn-primary" href="#" onclick="NewProduct()">Ajout</a>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
