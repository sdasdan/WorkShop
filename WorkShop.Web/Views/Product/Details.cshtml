@model WorkShop.Models.ProductModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<form asp-controller="Product" asp-action="Details" method="get"></form>
<div>
    <h4>Produit</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Nom :
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
    </dl>
    <dl class="row">
        <dt class="col-sm-2">
            Categorie :
        </dt>
        <dd class="col-sm-10">
            <ul class="col-sm-1">
                @foreach (var category in Model.ProductCategorie)
                {
                    <li>
                        @category.Categorie.Name
                    </li>
                }
            </ul>
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>